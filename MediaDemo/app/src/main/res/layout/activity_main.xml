<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/img_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片绘制" />

        <Button
            android:id="@+id/record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音" />

        <Button
            android:id="@+id/surface_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="surface view 视频预览" />

        <Button
            android:id="@+id/texture_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextureView  视频预览" />

        <Button
            android:id="@+id/muxer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextureView  音视频提取" />

        <Button
            android:id="@+id/open_gl_triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGLES 三角形绘制" />

        <Button
            android:id="@+id/open_gl_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGLES 图片绘制" />

    </LinearLayout>
</layout>